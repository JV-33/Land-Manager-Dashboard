@model LandManager.Models.LandProperty

@{
    ViewData["Title"] = "Dzēst Īpašumu";
}

<h2>@ViewData["Title"]</h2>

<h3>Vai esat pārliecināts, ka vēlaties dzēst šo īpašumu?</h3>
<div>
    <h4>Īpašums</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CadastreNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CadastreNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="LandPropertyId" />
        <input type="submit" value="Dzēst" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Atcelt</a>
    </form>
</div>