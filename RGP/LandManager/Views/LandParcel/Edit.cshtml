@model LandManager.Models.LandParcel

@{
    ViewData["Title"] = "Rediģēt Zemes Gabalu";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="LandParcelId" />
    <input type="hidden" asp-for="LandPropertyId" /> 
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TotalAreaInHectares" class="control-label">Kopplatība Hektāros</label>
        <input asp-for="TotalAreaInHectares" class="form-control" />
        <span asp-validation-for="TotalAreaInHectares" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SurveyDate" class="control-label">Uzmērīšanas Datums</label>
        <input asp-for="SurveyDate" class="form-control" type="date" />
        <span asp-validation-for="SurveyDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Saglabāt Izmaiņas" class="btn btn-primary" />
    </div>
</form>

<div>
    <button onclick="history.back()" class="btn btn-secondary">Atpakaļ</button>
</div>