@model LandManager.Models.LandParcel

@{
    ViewData["Title"] = "Dzēst Zemes Gabalu";
}

<h2>@ViewData["Title"]</h2>

<h3>Vai esat pārliecināts, ka vēlaties dzēst šo zemes gabalu?</h3>
<div>
    <h4>Zemes Gabals</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.LandParcelId
        </dd>
        <dt class="col-sm-2">
            Kopplatība Hektāros
        </dt>
        <dd class="col-sm-10">
            @Model.TotalAreaInHectares
        </dd>
        <dt class="col-sm-2">
            Uzmērīšanas Datums
        </dt>
        <dd class="col-sm-10">
            @Model.SurveyDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Kadastra Numurs
        </dt>
        <dd class="col-sm-10">
            @Model.LandPropertyId
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="LandParcelId" />
        <input type="submit" value="Dzēst" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Atcelt</a>
    </form>
</div>