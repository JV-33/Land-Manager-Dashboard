@model LandManager.Models.LandUse

@{
    ViewData["Title"] = "Pievienot Zemes Lietojumu";
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(state => state.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Type" class="control-label">Tips</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AreaInHectares" class="control-label">Platība Hektāros</label>
        <input asp-for="AreaInHectares" class="form-control" />
        <span asp-validation-for="AreaInHectares" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LandParcelId" class="control-label">Zemes Gabala ID</label>
        <input asp-for="LandParcelId" class="form-control" />
        <span asp-validation-for="LandParcelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Pievienot" class="btn btn-primary" />
    </div>
</form>