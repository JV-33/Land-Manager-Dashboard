@model LandManager.Models.LandUse

@{
    ViewData["Title"] = "Rediģēt Zemes Lietojumu";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="LandUseId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Type" class="control-label">Tipa</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AreaInHectares" class="control-label">Platība Hektāros</label>
        <input asp-for="AreaInHectares" class="form-control" />
        <span asp-validation-for="AreaInHectares" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LandParcelId" class="control-label">Zemes Gabala ID</label>
        <input asp-for="LandParcelId" class="form-control" />
        <span asp-validation-for="LandParcelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Saglabāt Izmaiņas" class="btn btn-primary" />
    </div>
</form>
<div>
    <button onclick="history.back()" class="btn btn-secondary">Atpakaļ</button>
</div>